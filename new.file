# Game loop
def main():
    screen = pygame.display.set_mode((SCREEN_WIDTH, SCREEN_HEIGHT))
    clock = pygame.time.Clock()
    running = True

    while running:
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                running = False

        # Game logic here

        # Draw everything
        screen.fill((0, 0, 0))
        # Draw grid and tetrominoes
        pygame.display.flip()
        clock.tick(60)

    pygame.quit()

